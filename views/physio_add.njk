{% extends "base.njk" %}

{% block titol %} Physio | Nou {% endblock %}


{% block contingut %}
    <h1 class="mb-4">Insertar un nou physio</h1>

    {% if errors.general %}
        <p class="alert alert-danger">{{ errors.general }}</p>
    {% endif %}


    <form action="/physios" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Nom: </label>
            {% if errors.name %}
                <p class="text-danger">{{ errors.name }}</p>
            {% endif %}
            <input type="text" class="form-control" name="name" 
                placeholder="Nom del physio..." value="{{ dades.name }}">
        </div>

        <div class="form-group">
            <label for="surname">Cognom: </label>
            {% if errors.surname %}
                <p class="text-danger">{{ errors.surname }}</p>
            {% endif %}
            <input type="text" class="form-control" name="surname" 
                placeholder="Cognom del physio..." value="{{ dades.surname }}">
        </div>

        <div class="form-group">
            <label for="specialty">Especialitat: </label>
            {% if errors.specialty %}
                <p class="text-danger">{{ errors.specialty }}</p>
            {% endif %}
            <input type="text" class="form-control" name="specialty" 
                placeholder="Especialitat del physio..." value="{{ dades.specialty }}">
        </div>

        <div class="form-group">
            <label for="licenseNumber">Numero de licencia: </label>
            {% if errors.licenseNumber %}
                <p class="text-danger">{{ errors.licenseNumber }}</p>
            {% endif %}
            <input type="text" class="form-control" name="licenseNumber" 
                placeholder="licencia del physio..." value="{{ dades.licenseNumber }}">
        </div>

        <div class="form-group">
            <label for="login">login: </label>
            {% if errors.login %}
                <p class="text-danger">{{ errors.login }}</p>
            {% endif %}
            <input type="text" class="form-control" name="login" 
                placeholder="login del patient..." value="{{ dades.login }}">
        </div>

        <div class="form-group">
            <label for="password">Contrasenya: </label>
            {% if errors.password %}
                <p class="text-danger">{{ errors.password }}</p>
            {% endif %}
            <input type="password" class="form-control" name="password" 
                placeholder="contrasenya del patient..." value="{{ dades.password }}">
        </div>

        <div class="form-group">
            <label for="image">Imatge:</label>
            <input type="file" class="form-control" name="image"
                placeholder="Imatge del patient..." />
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}